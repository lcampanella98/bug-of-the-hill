<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/playerMain.js"></script>

  </head>
  <body>

    <div id="start-page-container">
      <h1 id="title"><%= title %></h1>
      <form id="form-join">
        <input type="text" id="name" placeholder="Enter Your Name" autocomplete="off" /><br><br>
        <button type="submit" id="btn-join">Join</button>
      </form>
      <h3 id="msg"></h3>
    </div>

    <div id="game-container" style="display: none;">
      <canvas id="cvs" style="position:absolute;top:0;left:0;right:0;bottom:0;width:100%;height:100%;"></canvas>
      <div style="position:absolute;top:30px;left:30px">
        <h2 id="info-bug-name"></h2><br>
        <h3 id="info-bug-time"></h3>
      </div>
      <div style="position:absolute;left:calc(100% - 200px);top:30px">
        <h2 id="info-king-name"></h2><br>
        <h3 id="info-king-time"></h3>
      </div>
      <div style="position:absolute;left:30px;top:calc(100% - 200px);">
        <h4 id="pos-info"></h4>
      </div>
      <div style="position:absolute;top:30px;left:calc(50% - 100px);width:200px;text-align:center;">
        <h2 id="time-info"></h2>
      </div>
      <div style="position:absolute;top:200px;left:calc(50% - 200px);width:400px;text-align:center;">
        <h1 id="top-king-info"></h1>
      </div>

    </div>
  </body>
</html>
